<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane maxHeight="600.0" maxWidth="400.0" minHeight="600.0" minWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tu.paquete.RandomAccessController">
   <center>
      <VBox alignment="CENTER" spacing="10.0">
          <Label text="Gestión de Ficheros Aleatorios" />
      
                <HBox alignment="CENTER" spacing="10">
              <Label text="Código Producto:" />
              <TextField fx:id="codigoProductoField" />
          </HBox>
      
                <HBox alignment="CENTER" spacing="10">
              <Label text="Nombre Producto:" />
              <TextField fx:id="nombreProductoField" />
          </HBox>
      
                <HBox alignment="CENTER" spacing="10">
              <Label text="Unidades:" />
              <TextField fx:id="unidadesField" />
          </HBox>
      
                <HBox alignment="CENTER" spacing="10">
              <Label text="Código Familia:" />
              <TextField fx:id="codigoFamiliaField" />
          </HBox>
      
                <Button onAction="#insertarProducto" text="Insertar Producto" />
          <Button onAction="#visualizarProductos" text="Visualizar Productos" />
          <Button onAction="#visualizarProductoEspecifico" text="Visualizar Producto Específico" />
          <Button onAction="#modificarUnidades" text="Modificar Unidades" />
      
                <TextArea fx:id="resultArea" prefHeight="200" />
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
